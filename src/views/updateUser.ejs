<%- include('./partials/header.ejs')%>
    <div class="container d-flex align-items-center justify-content-center min-vh-100 ">
        <div class="row bg-primary flex-column bg-white align-items-center">
            <div class="card border d-flex flex-column bg-white align-items-center rounded-3 shadow p-3">
                <h1 class="text p-4">Update User Details</h1>
                <span class="text fs-6 text-danger">
                    <%=locals.message? message:""%>
                </span>
                <span class="text text-success font-weight">
                    <%=locals.succ? succ:""%>
                </span>
                <form action="/admin/updatedUser" method="post" class="mt-3" >
                    <div class="input-group mb-3">
                        <input type="text" name="name" required placeholder="Name" value="<%= user.name %>"
                            class="form-control form-control-md bg-light fs-6">
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" name="email" required placeholder="Email" value="<%= user.email %>"
                            class="form-control form-control-md bg-light fs-6">
                    </div>
                    <div class="input-group mb-3">
                        <input type="Phone" name="phone" required placeholder="Phone" value="<%= user.phone %>"
                            class="form-control form-control-md bg-light fs-6">
                    </div>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <div class="input-group mb-3">
                        <button type="submit" class="btn btn-lg btn-primary w-100 fs-6" >save</button>
                    </div>
                </form>
                <div class="row">
                    <small>Back to the adminpage <a href="/admin/adminPnnel" class="text-decoration-none">clicke
                            here</a></small>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs')%>