<%- include('./partials/header.ejs')%>
    <div class="container d-flex align-items-center justify-content-center min-vh-100 ">
        <div class="row bg-primary flex-column bg-white align-items-center">
            <div class="card border d-flex flex-column bg-white align-items-center rounded-3 shadow p-3">
                <h1 class="text p-3">Hi Sign Up Please</h1>
                <span class="text fs-6 text-danger">
                    <%=locals.message? message:""%>
                </span>
                <span class="text text-success font-weight">
                    <%=locals.succ? succ:""%>
                </span>
                <form action="/register" method="post" class="mt-3" onsubmit="return allChecking()">
                    <!-- NAME -->
                    <div class="input-group mb-3">
                        <input type="text" name="name" placeholder="Name" id="name"
                            class="form-control form-control-md bg-light fs-6" 
                            onchange="nameChecking()">
                    </div>
                    <span id="Name" class="text text-danger mb-2"></span>

                    <!-- EMAIL -->
                    <div class="input-group mb-3">
                        <input type="email" name="email" placeholder="Email" id="email"
                            class="form-control form-control-md bg-light fs-6" 
                            onchange="emailChecking()">
                    </div>
                    <span id="Email" class="text text-danger mb-2"></span>

                    <!-- PHONE NUMBER -->
                    <div class="input-group mb-3">
                        <input type="text" name="phone" placeholder="Phone" id="number"
                            class="form-control form-control-md bg-light fs-6" 
                            onchange="numberChecking()">
                    </div>
                    <span id="Number" class="text text-danger mb-2"></span>

                    <!-- PASSWORD -->
                    <div class="input-group mb-3">
                        <input type="password" name="password" placeholder="password" id="password"
                            class="form-control form-control-md bg-light fs-6" 
                            onchange="passwordChecking()">
                    </div>
                    <span id="Password" class="text text-danger mb-2"></span>

                    <div class="input-group mb-3">
                        <button class="btn btn-lg btn-primary w-100 fs-6" type="submit"
                            onclick="nameChecking(),emailChecking(),numberChecking(),passwordChecking()">register</button>
                    </div>
                </form>
                <div class="row">
                    <small>Already have an account? <a href="/" class="text-decoration-none">Login</a></small>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs')%>